pipeline {
    agent any

    options {
        skipDefaultCheckout(true)
    }

    environment {
        SHARED_WS = '/var/jenkins_home/workspace/doggo'
    }

    stages {
        stage('Prepare WS') {
            steps {
                dir(env.SHARED_WS) {
                    cleanWs()
                }
            }
        }

        stage('Checkout') {
            steps {
                dir(env.SHARED_WS) {
                    checkout scm
                }
            }
        }

        stage('Compose Up') {
            steps {
                dir(env.SHARED_WS) {
                    sh """
                        cd _devops/docker_compose
                        docker compose -f docker-compose.yaml up -d --build
                    """
                }
            }
        }
    }
}
