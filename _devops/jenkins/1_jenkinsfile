pipeline {
    agent any

    options {
        skipDefaultCheckout(true)
    }

    environment {
        SHARED_WS = '/var/jenkins_home/workspace/doggo'
    }

    stages {
        stage('Prepare WS') {
            steps {
                dir(env.SHARED_WS) {
                    sh 'docker compose -f ./_devops/docker_compose/docker-compose.yaml down || true'
                    cleanWs()
                }
            }
        }

        stage('Checkout') {
            steps {
                dir(env.SHARED_WS) {
                    checkout scm
                }
            }
        }

        stage('Compose Up') {
            steps {
                dir(env.SHARED_WS) {
                    sh 'docker compose -f ./_devops/docker_compose/docker-compose.yaml up -d --build'
                }
            }
        }
    }
}
