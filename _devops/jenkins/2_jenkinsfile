pipeline {
    agent any

    options {
        skipDefaultCheckout(true)
    }

    environment {
        SHARED_WS = '/var/jenkins_home/workspace/doggo'
    }

    stages {
        stage('Compose Down') {
            steps {
                dir(env.SHARED_WS) {
                    sh """
                        cd _devops/docker_compose
                        docker compose down
                    """
                }
            }
        }

        stage('Cleanup') {
            steps {
                dir(env.SHARED_WS) {
                    cleanWs()
                }
            }
        }
    }
}
